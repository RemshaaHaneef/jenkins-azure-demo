pipeline {
    agent any
    stages {
        stage('Pull Code') {
            steps {
                git 'https://github.com/RemshaaHaneef/jenkins-azure-demo.git'
            }
        }
   stage('Deploy') {
    steps {
        sh 'echo Deploying application...'
        sh 'sudo systemctl restart myapp'  // example deploy command
    }
}
}}

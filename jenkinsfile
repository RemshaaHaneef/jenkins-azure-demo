pipeline {
    agent any
    stages {
        stage('Pull Code') {
            steps {
                git 'https://github.com/RemshaaHaneef/jenkins-azure-demo.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building Java project...'
                bat 'mvn clean install'
            }
        }
        stage('Prepare Deploy Folder') {
            steps {
                bat 'if not exist C:\\deploy\\path mkdir C:\\deploy\\path'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                bat 'copy target\\*.jar C:\\deploy\\path\\'
            }
        }
    }
}

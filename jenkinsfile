pipeline {
    agent any
    stages {
        stage('Pull Code') {
            steps {
                git 'https://github.com/RemshaaHaneef/jenkins-azure-demo.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
                // Example build commands
                sh 'ls -la'  // Workspace ke files show karne ke liye
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Example deploy commands
                sh 'cp -r * /var/www/html/'  // Static site deploy karna
                sh 'ls -la /var/www/html/'   // Deploy directory check karne ke liye
            }
        }
    }
}
